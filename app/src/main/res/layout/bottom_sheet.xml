<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_logo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md. Ariful Islam"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Since friend July 2020"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/name"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"/>

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/message"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/message_icon"
        app:layout_constraintTop_toTopOf="@id/message_icon"
        app:layout_constraintBottom_toBottomOf="@id/message_icon"/>
    <ImageView
        android:id="@+id/unflow_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/unfollow"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_icon"/>

    <TextView
        android:id="@+id/unfollow_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unfollow"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/unflow_icon"
        app:layout_constraintTop_toTopOf="@id/unflow_icon"
        app:layout_constraintBottom_toBottomOf="@id/unflow_icon"/>
    <ImageView
        android:id="@+id/block_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/block"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unflow_icon"/>

    <TextView
        android:id="@+id/block_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/block_icon"
        app:layout_constraintTop_toTopOf="@id/block_icon"
        app:layout_constraintBottom_toBottomOf="@id/block_icon"/>
    <ImageView
        android:id="@+id/unfriend_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/block_icon"/>

    <TextView
        android:id="@+id/unfriend_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unfriend"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/unfriend_icon"
        app:layout_constraintTop_toTopOf="@id/unfriend_icon"
        app:layout_constraintBottom_toBottomOf="@id/unfriend_icon"/>



</androidx.constraintlayout.widget.ConstraintLayout>